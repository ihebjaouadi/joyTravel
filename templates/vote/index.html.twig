{% extends 'baseBackOffice.html.twig' %}

{% block title %}Vote index{% endblock %}

{% block body %}
    <div class="card card-info">
        <div class="card-header">
            <h1 class="card-title">Liste des Votes</h1>

        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Vote</th>
            <th>Hotel</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for vote in votes %}
            <tr>
                <td>{{ vote.id }}</td>
                <td>{{ vote.vote }}</td>
                <td>{{ vote.IDhotel }}</td>
                {#                <td>{{ vote.vote }}</td> #}
                <td>
                    <a href="{{ path('app_vote_show', {'id': vote.id}) }}">show</a>
                    <a href="{{ path('app_vote_edit', {'id': vote.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
