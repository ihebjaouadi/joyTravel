{% extends 'base.html.twig' %}

{% block title %}Vote index{% endblock %}

{% block body %}
    <div class="card card-info">
        <div class="card-header">
            <h1 class="card-title">Liste des Votes</h1>

        </div>
    </div>

    <table class="table">
        <thead>
        <tr>

            <th>Vote</th>
            <th>Hotel</th>
            <th>user</th>
            <th>action</th>
        </tr>
        </thead>
        <tbody>
        {% for vote in votes %}
            <tr>

                <td>{% for i in 1..vote.vote %}
                        ‚≠ê
                    {% endfor %}
                </td>
                <td>{{ vote.IDhotel }}</td>
                <td>{{ vote.IDUser }}</td>
                <td>
                    <a href="{{ path('app_vote_edit', {'id': vote.id}) }}">
                        <button type="button" class="btn btn-light"><i class="bi bi-pencil-square"></i></button>
                    </a>
                    <form method="post" action="{{ path('app_vote_delete', {'id': vote.id}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vote.id) }}">
                        {#                        <a href="{{ path('app_contacts_delete', {id:contact.id}) }}" #}
                        {#                           class="btn btn-primary" #}

                        {#                        >Supprimer</a> #}
                        <button class="btn btn-danger"><i class="bi bi-trash3"></i></button>


                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
