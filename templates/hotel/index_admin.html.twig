{% extends 'baseBackOffice.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <h1>Hotel list</h1>
    {% for message in app.flashes('success') %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>{{ message }}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    {% endfor %}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.Nom }}</td>
                <td>
                    <form method="post" action="{{ path('app_hotel_delete', {'id': hotel.id}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hotel.id) }}">
                        <button class="btn btn-danger pull-right">{{ button_label|default('Delete') }}</button>
                    </form>
                    <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">
                        <button class="btn btn-success pull-right">{{ button_label|default('Update') }}</button>
                    </a>
                </td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hotel_new') }}">
        <button class="btn btn-success pull-right">{{ button_label|default('Create') }}</button>
    </a>
{% endblock %}
