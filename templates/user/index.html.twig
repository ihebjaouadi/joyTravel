{% extends 'baseBackOffice.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

  
{{ form_start(form) }}

<div class="form-row align-items-end" >
 <div class="col">
   {{ form_row(form.nom, {'attr': {'placeholder': 'search for users'}}) }}
 </div>

  <div class="col">
   <div class="form-group">
        <button class="btn" type="submit"><i class="fa fa-search"></i></button>
    </div>
 </div>
</div>
 {{ form_end(form) }}
    <table class="table">
        <tbody>
        <tr>
                <th>email</th>
                <th>verified</th>
                <th>report account</th>
                <th>permission</th>
              
            </tr>
        {%for user in users%}
            
             <tr>
                
                <td>{{ user.email}}</td>
                <td>{%if user.isVerified == 1%}<i class="fa fa-check"></i>{% elseif user.password=="user123" %}<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-check-fill" viewBox="0 0 16 16">
  <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.026A2 2 0 0 0 2 14h6.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.606-3.446l-.367-.225L8 9.586l-1.239-.757ZM16 4.697v4.974A4.491 4.491 0 0 0 12.5 8a4.49 4.49 0 0 0-1.965.45l-.338-.207L16 4.697Z"/>
  <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-1.993-1.679a.5.5 0 0 0-.686.172l-1.17 1.95-.547-.547a.5.5 0 0 0-.708.708l.774.773a.75.75 0 0 0 1.174-.144l1.335-2.226a.5.5 0 0 0-.172-.686Z"/>
</svg>{%else%}<i class="fa fa-ban"></i>{%endif%}</td>
                <td> <form action="{{ path('app_Delete_User', {'id': user.id}) }}"><button class="btn btn-danger pull-right"><i class="fa fa-trash"></i></button></form></td>
               <td>
               {% if user.getRoles()[0] == 'ROLE_ADMIN'%}
               <form action="{{ path('app_Remove_Permission_User', {'id': user.id}) }}">
               <input id="stackedCheck1" onchange="this.form.submit()" class="form-check-input" type="checkbox" data-toggle="toggle" checked>
               </form>
               {%else%}
               <form action="{{ path('app_Permission_User', {'id': user.id}) }}">
               <input id="toggle-demo" onchange="this.form.submit()" type="checkbox" data-toggle="toggle">
               {%endif%}
               </form>
               </td>
                 </tr>
         {%endfor%}
        </tbody>
    </table>
 
   
{% endblock %}
