{#{% extends 'base.html.twig' %}#}
{% extends 'baseBackOffice.html.twig' %}
{% block title %}Disponibilite index{% endblock %}

{% block body %}
    <h1>Disponibilite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reservee_du</th>
                <th>Reservee_au</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for disponibilite in disponibilites %}
            <tr>
                <td>{{ disponibilite.id }}</td>
                <td>{{ disponibilite.reserveeDu ? disponibilite.reserveeDu|date('Y-m-d') : '' }}</td>
                <td>{{ disponibilite.reserveeAu ? disponibilite.reserveeAu|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_disponibilite_show', {'id': disponibilite.id}) }}">show</a>
                    <a href="{{ path('app_disponibilite_edit', {'id': disponibilite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_disponibilite_new') }}">Create new</a>
{% endblock %}
