{% extends 'base.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block body %}
    <h1>BlogPost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blog_post.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog_post.description }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blog_post.body }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ blog_post.dateCreation ? blog_post.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_post_index') }}">back to list</a>

    <a href="{{ path('app_blog_post_edit', {'id': blog_post.id}) }}">edit</a>

    {{ include('blog_post/_delete_form.html.twig') }}
{% endblock %}
