{#{% extends 'base.html.twig' %}#}
{% extends 'baseBackOffice.html.twig' %}
{% block title %}Formule index{% endblock %}

{% block body %}
    <h1>Formule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type_chambre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formule in formules %}
            <tr>
                <td>{{ formule.id }}</td>
                <td>{{ formule.TypeChambre }}</td>
                <td>
                    <a href="{{ path('app_formule_show', {'id': formule.id}) }}">show</a>
                    <a href="{{ path('app_formule_edit', {'id': formule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formule_new') }}">Create new</a>
{% endblock %}
