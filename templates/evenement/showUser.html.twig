            <p>
                {{ evenement.Description }}
            </p>


            <br>

            <h5><i class='fas fa-hourglass-end'  > {{  evenement.DateDebut ? evenement.DateDebut|date('Y-m-d') : ''  }} </i> =>
                <i class='fas fa-hourglass-end'  > {{  evenement.DateFin ? evenement.DateFin|date('Y-m-d') : ''  }} </i>
            </h5>
            <br>


            <button class="btn-success" onclick="yourlink()">Reserver Cette evenement </button>

            <script>

                function yourlink() {

                    var locs = [" {{ path('app_ress', {'id': evenement.id}) }}",
                        " {{ path('Add_cart_event', {'id': evenement.id}) }}"]

                    for (let i = 0; i < locs.length; i++) {
                        window.open(locs[i])}
                };

            </script>

