{% block body %}

    <br>


    <div class="row">
        <div class="col-md-7">
            <img src="{{ asset('uploads/images/'~ evenement.Img) }}" alt="{{ evenement.Nom }}" class="img-fluid">
        </div>
        <div class="col-md-5 my-auto">
            <h3>{{ evenement.Nom }}</h3>
            <p>{{ evenement.Category }}</p>
            <span class="product-page-price">{{ (evenement.Prix / 1)|number_format(2, ',', '.') }} €</span>
