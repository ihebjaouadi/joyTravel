                <td>
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="view" title="View" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                    <a href="{{ path('app_evenement_delete',{'id': evenement.id}) }}" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>

                </td>

