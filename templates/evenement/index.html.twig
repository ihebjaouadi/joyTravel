<a href="{{ path('TriPriceASC') }}"> <button type="button" class="btn-success" > Trie ASC  </button></a>

<a href="{{ path('TriPriceDESC') }}"><button type="button" class="btn-success" > Trie DESC  </button></a>#}




<div class="container-xxl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Event  <b>Details</b></h2></div>
                    <div class="col-sm-4">
                        <div class="search-box">
                            <i class="material-icons">&#xE8B6;</i>

                            <form method="post" action="{{ path('recherche') }}">

                                <input type="text" name="search">
                            </form>



                        </div>
                    </div>
                </div>
            </div>
            <a href="{{ path('app_evenement_new') }}">
            <i class="fa fa-plus fa-4x" aria-hidden="true" title="New Event" style="color:#1f76b0"></i>  &nbsp;
            </a>
            <a href="{{ path('app_category_event_index') }}">
                <i class="fas fa-list-alt fa-4x" title="Category Evenet"></i> </a>

            <table class="table table-striped table-hover table-bordered">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Affiche</th>
                    <th>Category</th>

                  {#   <th>prix <i class="fa fa-sort">  <li><a href={{ path('TriPriceASC') }} > Trier Par Prix  </a></li> </i>    </th>#}

                    <th>prix   <div ><a href="{{ path('TriPriceASC') }}" ><i class="fa fa-sort-asc "  style="font-size:36px;color:red" > </i></a> <a href="{{ path('TriPriceDESC') }}" ><i class="fa fa-sort-desc" style="font-size:36px;color:red"> </i></a> </div></th>
                    <th >Date Debut </th>
                    <th>Date Fin <i class="fa fa-sort"></i></th>
                    <th>Nombre de participants <i class="fa fa-sort"></i></th>
                    <th>Action          </th>

                </tr>
                </thead>
                <tbody>

                <tr>
                    {% set Cont=0 %}
                    {% for evenement in evenements %}
                <tr>
                    {#<td>{{ evenement.id }}</td> #}
                    <td>{{ evenement.Nom }}
                    </td>
                    <td> <img width="100" height="100" src="{{ asset('uploads/images/'~ evenement.Img) }}" alt="img"></td>

                    <td>{{ evenement.Category }}</td>
                    <td>{{ evenement.Prix }}</td>
                    <td>{{ evenement.DateDebut ? evenement.DateDebut|date('Y-m-d') : '' }}</td>
                    <td>{{ evenement.DateFin ? evenement.DateFin|date('Y-m-d') : '' }}</td>

                    <td style="width:10%">{{ evenement.NombreParticipants }}</td>
                    {#  <td>{{ evenement.Description }}</td>#}
                    {# <td> <img width="100" height="100" src="{{ asset('uploads/images/'~ evenement.Img) }}" alt="img"></td> #}

                <td style="width:15%">
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="edit" title="Edit" data-toggle="tooltip"><i class="   material-icons " style=" font-size:35px;" >&#xE254;</i></a>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="view" title="View" data-toggle="tooltip"><i class="material-icons " style=" font-size:35px;">&#xE417;</i></a>
                    <a href="{{ path('app_evenement_delete',{'id': evenement.id}) }}" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons"style=" font-size:35px;">&#xE872;</i></a>

                </td>

                </tr>

                {% set Cont=Cont+1 %}
                {% endfor %}
                </tbody>
            </table>
            <br>
            <a class="btn btn-success" href="{{ path('app_pdf') }}">Create pdf</a>
            <div class="clearfix">
                <div class="hint-text">Il ya  <b>{{ Cont }}</b> evenement en totale  </div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#"><i class="fa fa-angle-double-left"></i></a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>

                    <li class="page-item"><a href="#" class="page-link"><i class="fa fa-angle-double-right"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>





</body>
</html>




{% endblock %}



