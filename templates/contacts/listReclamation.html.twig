{% extends 'base.html.twig' %}

{% block body %}
    <div class="breadcrumb-area bg-overlay-2" style="background-image:url({{ asset('assets/img/other/4.png') }})">
        <div class="container">
            <div class="breadcrumb-inner">
                <div class="section-title text-center">
                    <h2 class="page-title">Add Property</h2>
                    <ul class="page-list">
                        <li><a href="index.html">Home</a></li>
                        <li>Add Property</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="agent-area bg-black pd-top-118 pd-bottom-90">
    <div class="container">
    <div class="section-title style-white text-center">
        <h6>Liste des Reclamations</h6>
        <h2>Vos Reclamations</h2>
    </div>
    <div class="row">
    {% for contact in contacts %}

        <div class="col-lg-3 col-sm-6">
            <div class="single-agent-wrap style-2 text-center">
                <div class="thumb">
                    <img src="{{ asset('assets/img/agent/7.png') }}" alt="img">
                </div>
                <div class="details">
                    <h5>{{ contact.IDUser }}</h5>
                    <h7>
                        {% if(contact.statue == 0) %}
                            Non traité
                        {% else %}
                            traité
                        {% endif %}
                    </h7>
                    <h6>{{ contact.IDhotel }}</h6>
                    <h7>{{ contact.Body }}</h7>
                    <ul class="social-area style-2">
                        <form method="post" action="{{ path('app_contacts_delete', {'id': contact.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                            {#                        <a href="{{ path('app_contacts_delete', {id:contact.id}) }}" #}
                            {#                           class="btn btn-primary" #}

                            {#                        >Supprimer</a> #}
                            <button class="btn btn-success pull-middle">Delete</button>


                        </form>


                    </ul>
                    <ul class="social-area style-2">
                        <form method="post" action="{{ path('app_contacts_edit', {'id': contact.id}) }}"
                              onsubmit="return confirm('Are you sure you want to update this item?');">

                            {#                        <a href="{{ path('app_contacts_delete', {id:contact.id}) }}" #}
                            {#                           class="btn btn-primary" #}

                            {#                        >Supprimer</a> #}
                            <button class="btn">Update</button>
                        </form>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}