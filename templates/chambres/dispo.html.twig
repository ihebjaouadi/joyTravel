{# {% extends 'base.html.twig' %} #}

{% block title %}Chambre Disponibles{% endblock %}

{% block body %}
    <h1>Chambre</h1>

    <table class="table">
        <tr>
            <td>Id</td>
            <td>Type</td>
            <td>Disponibilite</td>
        </tr>
        {% for c in chambres %}
            <tr>
                <td>
                    {{ c.id }}
                </td>
                <td>
                    {{ c.type }}
                </td>
                <td>
                    {{ c.getIDHotel.getNom }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
