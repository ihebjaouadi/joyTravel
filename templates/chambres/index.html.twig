{% extends 'baseBackOffice.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block body %}
    <h1>Chambre </h1>
    <div class="card">
        <div class="card-header"> Liste des chambres</div>
        <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Disponibilite</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for chambre in chambres %}
                    <tr>
                        <td>{{ chambre.id }}</td>
                        <td>{{ chambre.Type }}</td>
                        <td>{{ chambre.Disponibilite }}</td>
                        <td>
                            <form method="post" action="{{ path('app_chambres_delete', {'id': chambre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chambre.id) }}">
                                <button class="btn btn-danger pull-right">{{ button_label|default('Delete') }}</button>
                            </form>
                            <a href="{{ path('app_chambres_edit', {'id': chambre.id}) }}">
                                <button class="btn btn-success pull-right">{{ button_label|default('Update') }}</button>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a href="{{ path('app_chambres_new') }}">
                <button class="btn btn-success pull-right">{{ button_label|default('Create') }}</button>
            </a>
        </div>
    </div>

{% endblock %}
