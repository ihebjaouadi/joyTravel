{% extends 'base.html.twig' %}
{# {% extends 'baseBackOffice.html.twig' %} #}
{% block Stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/reservation.css') }}">
{% endblock %}
{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Date_reservation</th>
            <th>Date_arrivee</th>
            <th>Date_depart</th>
            <th>Nbr_personnes</th>
            <th>Prix_total</th>
            <th>Chambres</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.DateReservation ? reservation.DateReservation|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.DateArrivee ? reservation.DateArrivee|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.DateDepart ? reservation.DateDepart|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.NbrPersonnes }}</td>
                <td>{{ reservation.PrixTotal }}</td>
                <td>{{ reservation.getNomHotel }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_reservation_new') }}">
        <button type="submit" class="rounded-button mt-0">Create new</button>
    </a>
    {#    <a href="{{ path('app_reservation_new') }}">Create new</a> #}
{% endblock %}
